{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "PlatformIO",
            "args": [
                "run"
            ],
            "problemMatcher": [
                "$platformio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "type": "PlatformIO",
            "args": [
                "debug"
            ],
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "type": "PlatformIO",
            "args": [
                "run",
                "--target",
                "upload",
                "--target",
                "monitor"
            ],
            "problemMatcher": [
                "$platformio"
            ]
        }
    ]
}